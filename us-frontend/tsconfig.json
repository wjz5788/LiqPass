{
  "//": "================================================================================",
  "//": "TypeScript配置文件 - 前端TypeScript编译配置",
  "//": "文件: tsconfig.json",
  "//": "作者: LiqPass Team",
  "//": "描述: 配置TypeScript编译器选项，路径映射等",
  "//": "================================================================================",
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "moduleDetection": "force",
    "baseUrl": "./src",
    "paths": {
      "@runtime/*": ["runtime/*"]
    },
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"]
}
